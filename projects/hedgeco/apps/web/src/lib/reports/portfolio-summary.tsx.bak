              label="1 Year Return" 
              value={oneYearReturn !== undefined ? formatPercent(oneYearReturn) : 'N/A'} 
              isReturn 
              rawValue={oneYearReturn} 
            />
            {unrealizedGain !== null && (
              <>
                <SummaryItem label="Cost Basis" value={formatCurrency(totalCostBasis!)} />
                <SummaryItem 
                  label="Unrealized Gain/Loss" 
                  value={formatCurrency(unrealizedGain)} 
                  isReturn 
                  rawValue={unrealizedGain} 
                />
                <SummaryItem 
                  label="Unrealized %" 
                  value={formatPercent(unrealizedGainPct!)} 
                  isReturn 
                  rawValue={unrealizedGainPct!} 
                />
              </>
            )}
            {inceptionReturn !== undefined && (
              <SummaryItem 
                label="Since Inception" 
                value={formatPercent(inceptionReturn)} 
                isReturn 
                rawValue={inceptionReturn} 
              />
            )}
          </View>
        </View>

        {/* Strategy Allocation */}
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>Allocation by Strategy</Text>
          
          {/* Allocation Bar */}
          <View style={styles.allocationBarContainer}>
            {strategyAllocations.map((alloc, idx) => (
              <View
                key={idx}
                style={[
                  styles.allocationBarSegment,
                  { width: `${alloc.allocation}%`, backgroundColor: alloc.color }
                ]}
              />
            ))}
          </View>

          {/* Legend */}
          <View style={styles.allocationLegend}>
            {strategyAllocations.map((alloc, idx) => (
              <View key={idx} style={styles.legendItem}>
                <View style={[styles.legendColor, { backgroundColor: alloc.color }]} />
                <Text style={styles.legendText}>
                  {alloc.strategy} ({alloc.allocation.toFixed(1)}%)
                </Text>
              </View>
            ))}
          </View>

          {/* Allocation Table */}
          <View style={styles.allocationTable}>
            <View style={styles.tableHeader}>
              <Text style={[styles.tableHeaderCell, styles.colStrategy]}>Strategy</Text>
              <Text style={[styles.tableHeaderCell, styles.colAllocation]}>Allocation</Text>
              <Text style={[styles.tableHeaderCell, styles.colValue]}>Market Value</Text>
              <Text style={[styles.tableHeaderCell, styles.colReturn]}>YTD Return</Text>
              <Text style={[styles.tableHeaderCell, styles.colContribution]}>Contribution</Text>
              <Text style={[styles.tableHeaderCell, styles.colFunds]}>Funds</Text>
            </View>
            {strategyAllocations.map((alloc, idx) => (
              <View 
                key={idx} 
                style={[styles.tableRow, idx % 2 === 1 && styles.tableRowAlt]}
              >
                <Text style={[styles.tableCell, styles.colStrategy, styles.tableCellBold]}>
                  {alloc.strategy}
                </Text>
                <Text style={[styles.tableCell, styles.colAllocation]}>
                  {alloc.allocation.toFixed(1)}%
                </Text>
                <Text style={[styles.tableCell, styles.colValue]}>
                  {formatCurrency(alloc.marketValue)}
                </Text>
                <Text style={[
                  styles.tableCell, 
                  styles.colReturn,
                  { color: alloc.ytdReturn >= 0 ? colors.success : colors.danger }
                ]}>
                  {formatPercent(alloc.ytdReturn)}
                </Text>
                <Text style={[
                  styles.tableCell, 
                  styles.colContribution,
                  { color: alloc.contribution >= 0 ? colors.success : colors.danger }
                ]}>
                  {formatPercent(alloc.contribution, 3)}
                </Text>
                <Text style={[styles.tableCell, styles.colFunds]}>
