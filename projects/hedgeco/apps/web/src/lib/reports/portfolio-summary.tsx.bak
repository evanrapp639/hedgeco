              <Text style={[styles.tableHeaderCell, styles.holdingContrib]}>Contrib</Text>
            </View>
            {holdings.slice(0, 15).map((fund, idx) => (
              <View 
                key={fund.id} 
                style={[styles.holdingRow, idx % 2 === 1 && styles.tableRowAlt]}
              >
                <Text style={[styles.holdingName, styles.tableCellBold]}>
                  {fund.name.length > 25 ? fund.name.slice(0, 22) + '...' : fund.name}
                </Text>
                <Text style={styles.holdingStrategy}>{fund.strategy}</Text>
                <Text style={styles.holdingWeight}>{fund.allocation.toFixed(1)}%</Text>
                <Text style={styles.holdingValue}>{formatCurrency(fund.marketValue)}</Text>
                <Text style={[
                  styles.holdingReturn,
                  { color: fund.ytdReturn >= 0 ? colors.success : colors.danger }
                ]}>
                  {formatPercent(fund.ytdReturn)}
                </Text>
                <Text style={[
                  styles.holdingContrib,
                  { color: fund.contribution >= 0 ? colors.success : colors.danger }
                ]}>
                  {formatPercent(fund.contribution, 3)}
                </Text>
              </View>
            ))}
          </View>
          {holdings.length > 15 && (
            <Text style={[styles.notesText, { marginTop: 5 }]}>
              Showing top 15 of {holdings.length} holdings. See detailed holdings report for complete list.
            </Text>
          )}
        </View>

        {/* Notes */}
        {notes && (
          <View style={styles.notesBox}>
            <Text style={styles.notesTitle}>Notes</Text>
            <Text style={styles.notesText}>{notes}</Text>
          </View>
        )}

        {/* Footer */}
        <View style={styles.footer} fixed>
          <Text style={styles.footerText}>
            HedgeCo Portfolio Summary • Confidential
          </Text>
          <Text style={styles.footerText}>
            Generated {formatDate(data.generatedAt)}
          </Text>
          <Text 
            style={styles.pageNumber} 
            render={({ pageNumber, totalPages }) => `Page ${pageNumber} of ${totalPages}`} 
          />
        </View>
      </Page>
    </Document>
  );
};

