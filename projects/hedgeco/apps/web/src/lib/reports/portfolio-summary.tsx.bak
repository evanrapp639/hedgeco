// Type definitions
export interface PortfolioFund {
  id: string;
  name: string;
  strategy: string;
  allocation: number; // percentage
  marketValue: number;
  costBasis?: number;
  mtdReturn: number;
  ytdReturn: number;
  contribution: number; // contribution to portfolio return
}

export interface StrategyAllocation {
  strategy: string;
  allocation: number;
  marketValue: number;
  ytdReturn: number;
  contribution: number;
  fundCount: number;
  color: string;
}

export interface PortfolioSummaryData {
  // Header
  portfolioName: string;
  investorName?: string;
  asOfDate: Date;
  generatedAt: Date;
  
  // Summary metrics
  totalValue: number;
  totalCostBasis?: number;
  mtdReturn: number;
  ytdReturn: number;
  oneYearReturn?: number;
  inceptionReturn?: number;
  inceptionDate?: Date;
  
  // Allocations
  strategyAllocations: StrategyAllocation[];
  
  // Holdings
  holdings: PortfolioFund[];
  
  // Optional notes
  notes?: string;
}

// Helper functions
const formatCurrency = (value: number): string => {
  if (value >= 1e9) return `$${(value / 1e9).toFixed(2)}B`;
  if (value >= 1e6) return `$${(value / 1e6).toFixed(2)}M`;
  if (value >= 1e3) return `$${(value / 1e3).toFixed(0)}K`;
  return `$${value.toLocaleString()}`;
};

const formatPercent = (value: number, decimals = 2): string => {
  return `${value >= 0 ? '+' : ''}${value.toFixed(decimals)}%`;
};

const formatDate = (date: Date): string => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};

const getReturnStyle = (value: number) => {
  return value >= 0 ? styles.summaryValuePositive : styles.summaryValueNegative;
};

// Summary Item Component
const SummaryItem: React.FC<{
  label: string;
  value: string;
  isReturn?: boolean;
  rawValue?: number;
}> = ({ label, value, isReturn, rawValue }) => (
  <View style={styles.summaryItem}>
    <Text style={styles.summaryLabel}>{label}</Text>
    <Text style={[
      styles.summaryValue,
      isReturn && rawValue !== undefined && getReturnStyle(rawValue)
    ]}>
      {value}
    </Text>
  </View>
);

// Main Component
